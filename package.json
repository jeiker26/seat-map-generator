{
  "name": "seat-map-generator",
  "version": "0.1.0",
  "private": true,
  "description": "Seat map builder and embeddable widget for creating and rendering interactive seat maps",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss}\"",
    "type-check": "tsc --noEmit",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.8.1",
    "npm": ">=10.9.0"
  },
  "dependencies": {
    "@use-gesture/react": "^10.3.0",
    "konva": "^9.0.0",
    "next": "^16.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-konva": "^19.2.2",
    "sass": "^1.77.0",
    "uuid": "^9.0.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^9.0.0",
    "cypress": "^15.10.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  }
}
